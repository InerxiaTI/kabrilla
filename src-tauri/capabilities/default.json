{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [   
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/app",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open",
    "opener:default",
    "fs:default",
    "core:path:allow-resolve-directory", 
    "core:path:default",
    "fs:allow-app-meta",
    "fs:allow-write-file",
    "fs:allow-app-write",
    "fs:allow-appdata-read-recursive",
    "fs:allow-app-read",
    "fs:allow-create",
    "fs:allow-appdata-read",
    "core:resources:default"
  ]
}