{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kabrilla",
  "version": "0.1.0",
  "identifier": "com.kabrilla.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "kabrilla",
        "width": 1200,
        "height": 720,
        "minWidth": 1200,
        "minHeight": 720
      }
    ],
    "security": {
      "csp": null,
      "capabilities":[
        {
          "identifier": "mi-capability",
          "permissions": [
            "core:path:default",
            "fs:default",
            "fs:allow-create",
            "fs:allow-app-write",
            "core:resources:allow-close",
            "core:resources:default",
            "fs:allow-appdata-read-recursive",
            "fs:allow-app-read",
            {
              "identifier": "fs:scope",
              "allow": [{ "path": "$APPDATA/*" }] 
            }
          ],
          "windows": ["main"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
